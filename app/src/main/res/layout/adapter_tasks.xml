<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_weight="1">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_36sdp"
        android:elevation="40dp"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        card_view:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"

        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_6sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_6sdp"
            android:paddingBottom="@dimen/_10sdp">

            <com.robotack.robogamification.utilities.CustomFont
                android:layout_width="wrap_content"
                android:textSize="13sp"
                android:id="@+id/timerCount"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:visibility="invisible"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/whitesdk"
                android:background="@drawable/timer_orange_conrer"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="33:25"
                android:layout_height="wrap_content">

            </com.robotack.robogamification.utilities.CustomFont>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:orientation="vertical">

                <com.robotack.robogamification.utilities.CustomFont
                    android:id="@+id/taskName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:text="Task Name Here"
                    android:textColor="@color/blue_dark_colorsdk"
                    android:textSize="@dimen/_11sdp" />


                <ImageView
                    android:id="@+id/statusImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_expired"
                    android:visibility="visible" />


            </RelativeLayout>

            <com.robotack.robogamification.utilities.CustomFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/dark_button"
                android:gravity="center"

                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:id="@+id/verfyButton"
                android:textColor="@color/whitesdk"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/verfyTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="center"
                android:textStyle="italic"
                android:visibility="invisible"
                android:text="@string/wait_till_gamification"
                android:textColor="#CEA57A"
                android:textSize="@dimen/_9sdp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/taskImg"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:elevation="2dp"
        android:src="@drawable/ic_task_6" />

    <ImageView
        android:id="@+id/popup"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_30sdp"
        android:elevation="2dp"
        android:src="@drawable/information_btn"
        android:text="!"
        android:textColor="@color/black" />
</RelativeLayout>
